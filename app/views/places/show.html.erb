<script>
var map;
function initMap() {
  $.get("http://localhost:3000/places/"+<%= @place.id %>".json", function(data) {
    var place = data;
    console.log(place);

    var latlng = new google.maps.LatLng(place.latitude, place.longitude);
    var options = {
                    zoom: 15,
                    center: latlng,
                    mapTypeId: google.maps.MapTypeId.ROADMAP
                  }

    var e = document.getElementById("map");
    map = new google.maps.Map(e, options);
  });
}
</script>
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCDWSWO0vaWjAm9tfiswx48o_HKxjy1zaM&callback=initMap" async defer></script>
