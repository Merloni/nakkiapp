<div class="row medium-8 large-7 columns content">
  <p id="notice"><%= notice %></p>

  <h1>Listing Shifts</h1>

  <table>
    <thead>
      <tr>
        <th>Task</th>
        <th>User</th>
        <th>Hour</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @shifts.each do |shift| %>
        <tr>
          <td><%= shift.task_id %></td>
          <td><%= shift.user_id %></td>
          <td><%= shift.hour %></td>
          <td><%= link_to 'Show', shift %></td>
          <td><%= link_to 'Edit', edit_shift_path(shift) %></td>
          <td><%= link_to 'Destroy', shift, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Shift', new_shift_path %>
</div>
