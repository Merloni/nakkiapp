<%= form_for(@event) do |f| %>
    <% if @event.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

          <ul>
            <% @event.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :name %><br>
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label :date %><br>
      <%= f.date_select :date %>
    </div>
    <div class="field">
      <%= f.label :place_id %><br>
      <%= f.select :place_id, options_from_collection_for_select(@places, :id, :name) %>

    </div>
    <div class="field">
      <%= f.label "Task" %><br>
      <%= f.select :task_ids, options_from_collection_for_select(@tasks, :id, :name) %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>
